<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/button_color</item>

    </style>

    <style name="RaisedButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Light.Medium</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="TextAppearance">
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.Dark">
        <item name="android:textColor">#444</item>
    </style>

    <style name="TextAppearance.Light.XLarge">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.Light.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Light.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Dark.XLarge">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.Dark.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Dark.Medium">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
